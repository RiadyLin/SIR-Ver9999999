<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SIRPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.sumames.sir.entity.Customer</class>
    <class>com.sumames.sir.entity.Login</class>
    <class>com.sumames.sir.entity.LoginAccess</class>
    <class>com.sumames.sir.entity.LoginAccessDetail</class>
    <class>com.sumames.sir.entity.Employer</class>
    <class>com.sumames.sir.entity.Garage</class>
    <class>com.sumames.sir.entity.Car</class>
    <class>com.sumames.sir.entity.RentDetail</class>
    <class>com.sumames.sir.entity.Rent</class>
    <class>com.sumames.sir.entity.PurchaseOrderDetail</class>
    <class>com.sumames.sir.entity.PurchaseOrder</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sir?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="abc"/>
    </properties>
  </persistence-unit>
</persistence>
